<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">

    <style name="Theme.StoryNote.AppBar" parent="ThemeOverlay.AppCompat.ActionBar">
        <item name="titleTextAppearance">@style/Theme.StoryNote.Text.LabelMedium</item>
    </style>

    <style name="Theme.StoryNote.MainTextAppearance" parent="@android:style/TextAppearance">
        <item name="android:fontFamily">@font/lato</item>
        <item name="android:textColor">?attr/textColor</item>
    </style>

    <style name="Theme.StoryNote.MainTextAppearance.SearchBar" parent="TextAppearance.Material3.SearchBar">
        <item name="android:textAppearance">@style/Theme.StoryNote.MainTextAppearance</item>
    </style>

    <style name="Theme.StoryNote.FilledButtonTheme" parent="Widget.Material3.Button.UnelevatedButton">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:backgroundTint">@color/primary_40</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.StoryNote.OutlinedButtonTheme" parent="Widget.Material3.Button.OutlinedButton">
        <item name="android:fontFamily">@font/lato_bold</item>
        <item name="android:textSize">@dimen/font_medium</item>
        <item name="android:textColor">?attr/colorPrimary</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="Theme.StoryNote.OutlinedButtonTheme.IconOnly" parent="Widget.Material3.Button.OutlinedButton">
        <item name="iconPadding">0dp</item>
        <item name="android:insetTop">0dp</item>
        <item name="android:insetBottom">0dp</item>
        <item name="android:minWidth">48dp</item>
        <item name="android:minHeight">48dp</item>
        <item name="android:backgroundTint">@color/color_group_button</item>
    </style>

</resources>